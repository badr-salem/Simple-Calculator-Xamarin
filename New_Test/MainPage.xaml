<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:New_Test"
             x:Class="New_Test.MainPage">

    <StackLayout>
        <Entry Placeholder="Please Enter first Number" x:Name="txtNum1" ></Entry>
        <Entry Placeholder="Please Enter seconde Number" x:Name="txtNum2" ></Entry>
        <Button Text="+" Clicked="Sum" ></Button>
        <Button Text="-" Clicked="Min" ></Button>
        <Button Text="*" Clicked="Multi" ></Button>
        <Button Text="/" Clicked="Qsmh" ></Button>
        <Label x:Name="lblResult" ></Label>
    </StackLayout>

</ContentPage>
